<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="center">

        <Button
            android:id="@+id/btnStartConnection"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="12dp"
            android:background="@color/backgroundBtn"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:drawableStart="@drawable/bluetooth_connected"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/btnDiscover"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="12dp"
            android:background="@color/backgroundBtn"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:drawableStart="@drawable/bluetooth_searching"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/btnVisible"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="12dp"
            android:background="@color/backgroundBtn"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:drawableStart="@drawable/baseline_bluetooth_24"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/btnONOFF"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/backgroundBtn"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:drawableStart="@drawable/power"
            android:drawablePadding="5dp"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/back" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

    </LinearLayout>

</LinearLayout>